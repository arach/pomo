{
  "id": "terminal",
  "name": "Terminal",
  "description": "Retro terminal-style watch face with ASCII progress bar",
  "author": "Pomo Team",
  "version": "1.0.0",
  "theme": {
    "colors": {
      "background": "rgba(0, 0, 0, 0.98)",
      "foreground": "#00ff00",
      "accent": "#00ff00",
      "success": "#00ff00",
      "warning": "#ffff00",
      "error": "#ff0000"
    },
    "fonts": {
      "primary": "'SF Mono', 'Monaco', 'Cascadia Code', 'Consolas', monospace",
      "accent": "'SF Mono', 'Monaco', 'Cascadia Code', 'Consolas', monospace"
    },
    "customStyles": {
      "@import": "@keyframes flicker { 0% { opacity: 0.97; } 50% { opacity: 1; } 100% { opacity: 0.98; } } @keyframes scanline { 0% { transform: translateY(-100%); } 100% { transform: translateY(100%); } } @keyframes textShadow { 0% { text-shadow: 0 0 4px currentColor, 0 0 8px currentColor; } 50% { text-shadow: 0 0 5px currentColor, 0 0 10px currentColor; } 100% { text-shadow: 0 0 4px currentColor, 0 0 8px currentColor; } }",
      ".container": {
        "background": "radial-gradient(ellipse at center, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.98) 100%)",
        "backgroundImage": "repeating-linear-gradient(0deg, rgba(0, 255, 0, 0.03), rgba(0, 255, 0, 0.03) 1px, transparent 1px, transparent 2px)",
        "boxShadow": "inset 0 0 100px rgba(0, 255, 0, 0.05), inset 0 0 20px rgba(0, 255, 0, 0.05)",
        "position": "relative",
        "overflow": "hidden",
        "animation": "flicker 0.15s infinite"
      },
      ".container::before": {
        "content": "''",
        "position": "absolute",
        "top": "-100%",
        "left": 0,
        "right": 0,
        "height": "200%",
        "background": "linear-gradient(to bottom, transparent 0%, rgba(0, 255, 0, 0.02) 50%, transparent 100%)",
        "animation": "scanline 8s linear infinite",
        "pointerEvents": "none",
        "zIndex": 1
      },
      ".container::after": {
        "content": "''",
        "position": "absolute",
        "top": 0,
        "left": 0,
        "right": 0,
        "bottom": 0,
        "background": "radial-gradient(ellipse at center, transparent 0%, rgba(0, 0, 0, 0.4) 100%)",
        "pointerEvents": "none",
        "zIndex": 2
      }
    }
  },
  "layout": {
    "type": "rectangular",
    "size": {
      "width": "100%",
      "height": "100%"
    },
    "padding": 30
  },
  "components": [
    {
      "type": "custom",
      "id": "terminal-header",
      "position": {
        "x": 30,
        "y": 30
      },
      "props": {
        "text": "pomo --duration={duration} --energy=focused"
      },
      "style": {
        "fontSize": "11px",
        "opacity": 0.9,
        "fontFamily": "'SF Mono', monospace",
        "letterSpacing": "0.05em",
        "color": "#00ff00"
      }
    },
    {
      "type": "time",
      "id": "main-time",
      "position": {
        "x": 30,
        "y": 80
      },
      "style": {
        "fontSize": "48px",
        "fontWeight": "200",
        "letterSpacing": "0.2em",
        "textAlign": "left",
        "fontFamily": "'SF Mono', monospace",
        "textShadow": "0 0 8px currentColor, 0 0 15px currentColor",
        "color": "#00ff00",
        "animation": "textShadow 4s ease-in-out infinite"
      }
    },
    {
      "type": "custom",
      "id": "ascii-progress",
      "position": {
        "x": 30,
        "y": 150
      },
      "properties": {
        "component": "ascii-progress"
      },
      "style": {
        "fontSize": "11px",
        "fontFamily": "'SF Mono', monospace",
        "color": "#00ff00"
      }
    },
    {
      "type": "custom",
      "id": "terminal-controls",
      "position": {
        "x": 30,
        "y": 280
      },
      "properties": {
        "component": "terminal-controls",
        "style": {
          "fontSize": "11px",
          "fontFamily": "'SF Mono', monospace",
          "color": "#00ff00"
        }
      }
    },
    {
      "type": "status",
      "id": "status-footer",
      "position": {
        "x": "right",
        "y": "bottom"
      },
      "style": {
        "position": "absolute",
        "bottom": "20px",
        "right": "30px",
        "fontSize": "10px",
        "textAlign": "right",
        "textTransform": "uppercase",
        "letterSpacing": "0.05em",
        "fontFamily": "'SF Mono', monospace",
        "opacity": 0.6,
        "color": "#00ff00"
      },
      "props": {
        "format": "[{status}]"
      }
    }
  ]
}