{
  "id": "retro-digital",
  "name": "Retro Digital",
  "description": "Classic 7-segment digital clock display",
  "author": "Pomo Team",
  "version": "1.0.0",
  "theme": {
    "colors": {
      "background": "linear-gradient(135deg, #1a0f0a 0%, #2a1f1a 100%)",
      "foreground": "#ffcc00",
      "accent": "#ff3333",
      "success": "#00ff00",
      "warning": "#ffff00",
      "error": "#ff0000"
    },
    "fonts": {
      "primary": "'Orbitron', 'DSEG7', monospace",
      "accent": "'Orbitron', monospace"
    },
    "customStyles": {
      ".container": {
        "backgroundImage": "linear-gradient(135deg, #1a0f0a 0%, #2a1f1a 100%), radial-gradient(circle at 20% 50%, rgba(255, 204, 0, 0.05), transparent 50%)",
        "backgroundSize": "cover",
        "backgroundPosition": "center"
      },
      ".time-display": {
        "font-family": "'Orbitron', 'DSEG7', monospace",
        "font-weight": "700",
        "text-shadow": "0 0 20px #ffcc00, 0 0 40px #ffcc00, inset 0 0 10px rgba(255, 204, 0, 0.5)",
        "letter-spacing": "0.15em",
        "background": "linear-gradient(to bottom, #ffcc00, #ff9900)",
        "backgroundClip": "text",
        "webkitBackgroundClip": "text",
        "webkitTextFillColor": "transparent",
        "filter": "brightness(1.2)"
      },
      ".progress": {
        "filter": "drop-shadow(0 0 10px #ffcc00)"
      },
      "@import": "@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&display=swap');"
    }
  },
  "layout": {
    "type": "rectangular",
    "size": {
      "width": "100%",
      "height": "100%"
    },
    "padding": 0
  },
  "components": [
    {
      "id": "time",
      "type": "time",
      "position": {
        "x": "center",
        "y": 100
      },
      "style": {
        "fontSize": "56px",
        "fontWeight": "900",
        "color": "#ffcc00",
        "fontFamily": "'Orbitron', monospace",
        "textShadow": "0 0 30px #ffcc00, 0 0 60px #ff9900, 0 2px 4px rgba(0,0,0,0.8)",
        "letterSpacing": "0.2em",
        "textAlign": "center",
        "filter": "brightness(1.3)"
      }
    },
    {
      "id": "status",
      "type": "status",
      "position": {
        "x": "center",
        "y": 175
      },
      "style": {
        "fontSize": "14px",
        "color": "#ff3333",
        "textTransform": "uppercase",
        "letterSpacing": "0.3em",
        "textShadow": "0 0 15px currentColor, 0 0 30px currentColor",
        "fontFamily": "'Orbitron', monospace",
        "fontWeight": "700"
      }
    },
    {
      "id": "progress-bar",
      "type": "custom",
      "position": {
        "x": 0,
        "y": 0
      },
      "properties": {
        "component": "retro-progress",
        "style": {
          "position": "absolute",
          "top": 0,
          "left": 0,
          "width": "100%",
          "height": "3px",
          "background": "rgba(0,0,0,0.8)",
          "border": "none",
          "borderRadius": "0",
          "boxShadow": "0 1px 3px rgba(0,0,0,0.5)"
        }
      }
    },
    {
      "id": "controls",
      "type": "controls",
      "position": {
        "x": "center",
        "y": 220
      },
      "style": {
        "gap": "15px"
      },
      "properties": {
        "buttonStyle": {
          "background": "linear-gradient(135deg, #2a1a0a, #1a0a00)",
          "border": "2px solid #ffcc00",
          "borderRadius": "6px",
          "color": "#ffcc00",
          "padding": "8px 16px",
          "transition": "all 0.3s",
          "fontFamily": "'Orbitron', monospace",
          "fontWeight": "700",
          "fontSize": "11px",
          "letterSpacing": "0.1em",
          "boxShadow": "inset 0 1px 3px rgba(0,0,0,0.5), 0 0 10px rgba(255,204,0,0.2)",
          "hover": {
            "background": "#ffcc00",
            "color": "#1a0f0a",
            "boxShadow": "0 0 20px #ffcc00, 0 0 40px #ff9900"
          }
        },
        "size": "medium"
      }
    }
  ]
}