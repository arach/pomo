{
  "id": "minimal",
  "name": "Minimal",
  "description": "Clean, refined design that respects your system theme",
  "author": "Pomo Team",
  "version": "4.0.0",
  "progressBar": {
    "hidden": true
  },
  "theme": {
    "colors": {
      "background": "transparent",
      "foreground": "var(--foreground)",
      "accent": "var(--muted-foreground)",
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444"
    },
    "fonts": {
      "primary": "-apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif",
      "accent": "-apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif"
    },
    "customStyles": {
      "@import": "@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }",
      ".container": {
        "background": "transparent",
        "animation": "fadeIn 0.4s ease-out"
      }
    }
  },
  "layout": {
    "type": "rectangular",
    "size": {
      "width": "240px",
      "height": "120px"
    },
    "padding": 20
  },
  "components": [
    {
      "id": "compact-display",
      "type": "custom",
      "position": {
        "x": 20,
        "y": 20
      },
      "properties": {
        "component": "minimal-compact"
      }
    }
  ]
}